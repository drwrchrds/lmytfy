
<%# TODO @fzz this is the new url page :) %>

<div class="content">
	<div class="section section--alert">
		<% if flash[:error] %>
			<div class="alert alert-warning">
				<%= flash[:error] %>
			</div>
		<% end %>
	</div>
	<div class="logo">
		Let me 
		<img class="logo-img" src="<%= asset_path 'logo.png'%>" alt="logo" class="center-block"> 
		it for you!
	</div>
	<div class="section search-form">
		<form id='shortUrlForm' >
			<div class="search-input-wrapper">

				<div class="search-input-box" style="margin-right: -1px">
					<span>
						<label>Find:
							<input type="text" name="find_desc" placeholder="Tacos, pupusas..." class="search-field-left">
						</label>
					</span>
				</div>
				<div class="search-input-box">
					<span>
						<label>Near:
							<input type="text" name="loc" class="search-field-right" value="San Francisco">
						</label>
					</span>
				</div>
			</div>
			<button class="btn yelp-button">Yelp It</button>
		</form>
	</div>
	<div class="section show-short-url" id="shortURLSection">
		<label>Here is your link: &nbsp;
			<input 
				id='showShortUrl' 
				readonly="readonly" 
				onClick="this.select()"
				type="text"
			>
		</label>
		<a id="goButton" class="go-button btn btn-link" target="_blank" href="#">Preview</a>
	</div>

	<div id= "quote-element" class="quote">
		<img 
			src="<%= asset_path 'quotes.png'%>" 
			alt="quote" 
			class="quote-bottom-image"
		>
		<center id="text-h2">Where can I get the best tacos in the Mission?</center>
	</div>	
	<div class="darwin">
		<img src="<%= asset_path 'darwin_create.png'%>" alt="darwin" class="darwin-bottom-image">
	</div>
</div>


<script>
	$(function() {
		var $shortUrlForm = $(shortUrlForm);
		var $showShortUrl = $(showShortUrl);
		var $goButton = $(goButton);
		var $shortURLSection = $(shortURLSection);
		yelpit.linkShortener.init($shortUrlForm, $showShortUrl, $goButton, $shortURLSection);
	});
</script>

<script type="text/javascript">
     var quotes = [
	    "Going to NYC this weekend. Any suggestions for speakeasy bars?", 
 	    "Where can I find some authentic Teque√±os?",
 	    "I need some Moroccan food right now. Where should I go?"
     ];

    $(function() {
    	var quoteH2Element = document.getElementById("text-h2");
    	var interval = setInterval(function() {
    		// $(quoteH2Element).fadeOut(500);
    		var newQuote = quotes.shift();
    		quoteH2Element.innerHTML = newQuote;
    		quotes.push(newQuote);
    		$(quoteH2Element).hide();
    		$(quoteH2Element).fadeIn(1000);
    	}, 2300);
    });
</script>